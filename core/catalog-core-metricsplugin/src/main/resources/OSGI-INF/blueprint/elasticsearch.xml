<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cxf="http://cxf.apache.org/blueprint/core"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <bean id="catalogEsMetrics" class="ddf.catalog.metrics.CatalogElasticsearchMetrics" destroy-method="destroy">
        <argument>
            <reference interface="ddf.catalog.filter.FilterAdapter" />
        </argument>
    </bean>

    <service ref="catalogEsMetrics" interface="org.codice.ddf.configuration.ConfigurationWatcher" />
    <service ref="catalogEsMetrics" interface="ddf.catalog.plugin.PreQueryPlugin" />
    <service ref="catalogEsMetrics" interface="ddf.catalog.plugin.PostQueryPlugin" />
    <service ref="catalogEsMetrics" interface="ddf.catalog.plugin.PostIngestPlugin" />
    <service ref="catalogEsMetrics" interface="ddf.catalog.plugin.PostResourcePlugin" />

</blueprint>
